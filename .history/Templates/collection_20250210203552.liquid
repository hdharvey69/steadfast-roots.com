{% comment %}
  File: templates/collection.liquid
  Description: Displays all products in a given collection.
{% endcomment %}

<div class="collection-page" style="background-color: #2E2E2E; color: #FFF; padding: 20px;">
    <h1>{{ collection.title }}</h1> <!-- Collection Title -->
    <p>{{ collection.description }}</p> <!-- Collection Description -->
  
    <div class="collection-grid" style="display: flex; flex-wrap: wrap; gap: 20px;">
      {% for product in collection.products %}
        <div class="product-card" style="background-color: #555; padding: 20px; width: 250px;">
          <a href="{{ product.url }}" style="text-decoration: none; color: #FFF;">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" style="max-width: 100%;">
            <h3>{{ product.title }}</h3> <!-- Product Title -->
            <p>{{ product.price | money }}</p> <!-- Product Price -->
          </a>
        </div>
      {% else %}
        <p>No products found in this collection.</p>
      {% endfor %}
    </div>
  </div>
  