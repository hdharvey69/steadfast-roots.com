{% comment %} 
#comment: This is the homepage template.
It displays the hero section with a banner and slogan, and lists the product collections.
{% endcomment %}
<section class="hero"> <!-- #comment: Begin hero section -->
    <img src="{{ 'banner.jpg' | asset_url }}" alt="Banner Image" /> <!-- #comment: Display banner image (ensure banner.jpg exists in assets) -->
    <h1>Building Your Dream Home, One Step at a Time</h1> <!-- #comment: Display the slogan -->
  </section> <!-- #comment: End hero section -->
  
  <section class="collections"> <!-- #comment: Begin collections section -->
    <h2>Our Collections</h2> <!-- #comment: Title for collections section -->
    <div class="collection-list"> <!-- #comment: Container for collection links -->
      <a href="/collections/mens-tshirts">Men's T-Shirts</a> <!-- #comment: Link to Men's T-Shirts collection page -->
      <a href="/collections/hoodies">Hoodies</a> <!-- #comment: Link to Hoodies collection page -->
      <a href="/collections/long-sleeved-shirts">Long Sleeve Shirts</a> <!-- #comment: Link to Long Sleeve Shirts collection page -->
    </div> <!-- #comment: End collection list container -->
  </section> <!-- #comment: End collections section -->
  