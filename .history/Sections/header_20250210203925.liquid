{% comment %}
  File: sections/header.liquid
  Description: Header section with store logo, navigation, and search bar.
{% endcomment %}

<header style="background-color: #1C1C1C; color: #F0F0F0; padding: 20px;">
    <div class="container">
      <div class="logo">
        <a href="/" style="font-size: 24px; font-weight: bold; text-decoration: none; color: white;">
          {{ settings.store_logo | default: 'Steadfast Roots' }}
        </a>
      </div>
      <nav>
        <ul style="list-style: none; display: flex; gap: 15px;">
          <li><a href="/" style="color: #F0F0F0;">Home</a></li>
          <li><a href="/collections/all" style="color: #F0F0F0;">Shop</a></li>
          <li><a href="/pages/about" style="color: #F0F0F0;">About</a></li>
        </ul>
      </nav>
      <div class="search">
        <form action="/search" method="get">
          <input type="text" name="q" placeholder="Search..." style="background-color: #333; color: #FFF;">
          <button type="submit" style="background-color: #555; color: #FFF;">Search</button>
        </form>
      </div>
    </div>
  </header>
  